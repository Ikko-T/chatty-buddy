<footer class="fixed-bottom" id="footer">
  <%= form_with model: @message, local: false do |f| %>
    <div class="form-group">
      <%= f.text_area :content, class: 'form-control mb-2', rows: '1', maxlength: '500' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Send', class: 'btn btn-primary form-control', id: 'message-button' %>
    </div>
  <% end %>
</footer>
